<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#48CDDC39"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateActivityTea">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Insert Tea PDF"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_tea_name1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Tea Name" />

    <EditText
        android:id="@+id/et_course_id_tea1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tea Course ID"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_course_name_tea1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="Tea Course Name"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/spinner_tea_semester1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="10dp" />

    <RadioGroup
        android:id="@+id/radioGroup_exam_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_mid_tea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Mid"/>
        <RadioButton
            android:id="@+id/radio_final_tea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Final"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup_tea_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/radio_question_tea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Question"/>
        <RadioButton
            android:id="@+id/radio_note_tea1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Note"/>
    </RadioGroup>

    <EditText
        android:id="@+id/et_tea_year1"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Tea Year"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/pdf_in_tea1"
        android:layout_width="122dp"
        android:layout_height="105dp"
        android:background="@android:drawable/edit_text"
        android:enabled="false"
        android:padding="8dp"
        android:src="@drawable/select_pdf" />

    <ProgressBar
        android:id="@+id/progressBar_tea1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Small"/>

    <Button
        android:id="@+id/btnInsertFile_tea1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Tea PDF"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>
